# Supabase-managed Postgres (Prisma)
STORAGE_POSTGRES_PRISMA_URL="postgresql://user:password@localhost:5432/monet"

# Redis (for BullMQ)
REDIS_URL="redis://localhost:6379"

# NextAuth
AUTH_SECRET="your-secret-key-here"
# or
NEXTAUTH_SECRET="your-secret-key-here"

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
# ^ stripe listen --forward-to localhost:3000/api/stripe/webhook
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_CONNECT_CLIENT_ID="ca_..."

# Stripe (Live API in Vitest)
STRIPE_TEST_SECRET_KEY="sk_test_..."
STRIPE_TEST_WEBHOOK_SECRET="whsec_..."
STRIPE_TEST_DEFAULT_PAYMENT_METHOD="pm_card_visa"

# Platform Fee (decimal: 0.20 for 20%, default: 0.20)
PLATFORM_FEE=0.20

# Google OAuth (with Calendar scopes)
AUTH_GOOGLE_ID="your-client-id"
AUTH_GOOGLE_SECRET="your-client-secret"
# Backward-compatible aliases (optional)
GOOGLE_CLIENT_ID="your-client-id"
GOOGLE_CLIENT_SECRET="your-client-secret"

# LinkedIn OAuth
AUTH_LINKEDIN_ID="your-client-id"
AUTH_LINKEDIN_SECRET="your-client-secret"
# Backward-compatible aliases (optional)
LINKEDIN_CLIENT_ID="your-client-id"
LINKEDIN_CLIENT_SECRET="your-client-secret"

# Zoom Integration
ZOOM_ACCOUNT_ID="your-account-id"
ZOOM_CLIENT_ID="your-client-id"
ZOOM_CLIENT_SECRET="your-client-secret"
ZOOM_WEBHOOK_SECRET_TOKEN="your-webhook-secret-token"
ZOOM_ATTENDANCE_ENFORCEMENT=true
ZOOM_ATTENDANCE_INITIAL_CHECK_MINUTES=10
ZOOM_ATTENDANCE_FINAL_CHECK_MINUTES=20
ZOOM_ATTENDANCE_EVENT_RETENTION_DAYS=180

# Gmail OAuth2 SMTP for Email
GMAIL_OAUTH_CLIENT_ID="your-gmail-oauth-client-id"
GMAIL_OAUTH_CLIENT_SECRET="your-gmail-oauth-client-secret"
GMAIL_OAUTH_REFRESH_TOKEN="your-gmail-oauth-refresh-token"
GMAIL_OAUTH_USER="your-sender@gmail.com"
EMAIL_FROM="Monet Platform <your-sender@gmail.com>"

# Supabase Storage for Resume PDFs
STORAGE_SUPABASE_URL="https://your-project-ref.supabase.co"
STORAGE_SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
SUPABASE_RESUME_BUCKET="candidate-resumes"

# Seed Data Population Mode (optional; default: lite)
# Valid values: lite, full
SEED_POPULATION_MODE="lite"

# Feature Flags
# LinkedIn Enhanced Features (default: false)
FEATURE_LINKEDIN_ENHANCED=false

# LLM-based QC (default: true)
FEATURE_QC_LLM=true

# Configuration
# Call Duration in Minutes (default: 30)
CALL_DURATION_MINUTES=30

# Default Timezone (default: America/New_York)
DEFAULT_TIMEZONE=America/New_York

# Claude Anthropic API Key
ANTHROPIC_API_KEY="test"
